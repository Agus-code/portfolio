---
import StartIcon from "./icons/StartIcon.astro";
import content from "./../content";
import { Image } from "astro:assets";
import Section from "./Section.astro";

const { projects } = content;
---

<Section id="projects" Icon={StartIcon} title="Projectos">
  <ol class="mx-5 mt-2 grid md:grid-cols-2 gap-6">
    {
      projects.map((project) => (
        <li class="opacity-45 hover:opacity-100 transition-opacity">
          <a
            class="w-full"
            href={`/projectos/${project.name.replaceAll(" ", "-").toLowerCase()}`}
          >
            <Image
              src={`/images/projects/${project.image}`}
              class="w-full"
              alt={project.name}
              width={"100"}
              height={"100"}
            />
            <div class="py-1">
              <h5 class="text-lg font-medium mb-1">{project.name}</h5>
              <div class="overflow-hidden">
                <p class="leading-none line-clamp-5 text-ellipsis whitespace-pre-wrap">
                  {project.description}
                </p>
              </div>
              <ul class="my-2 flex items-center gap-2">
                {project.languajes.map((Lang) => (
                  <li>
                    <Lang classes="h-5 w-5" />
                  </li>
                ))}
              </ul>
            </div>
          </a>
        </li>
      ))
    }
  </ol>
</Section>
