---
import StartIcon from "./icons/StartIcon.astro";
import content from "./../content";
import { Image } from "astro:assets";
import Section from "./Section.astro";

const { projects } = content;
---

<Section id="projects" Icon={StartIcon} title="Projectos">
  <div class="mx-5 mt-2 grid lg:grid-cols-2 gap-8">
    {
      projects.map((project) => (
        <article class="lg:opacity-80 lg:hover:opacity-100 transition-opacity">
 
            <Image
              src={`/images/projects/${project.image}`}
              class="w-full"
              alt={project.name}
              width={"100"}
              height={"100"}
            />
            <div class="py-1">
              <h5 class="text-lg font-medium mb-1 text-green-500">{project.name}</h5>
              <div class="overflow-hidden">
                <p class="leading-5 text-pretty line-clamp-5 text-ellipsis">
                  {project.description}
                </p>
              </div>
              <ul class="my-2 flex items-center gap-2">
                {project.languajes.map((Lang) => (
                  <li>
                    <Lang classes="h-5 w-5" />
                  </li>
                ))}
              </ul>
            </div>
        </article>
      ))
    }
  </div>
</Section>
