---
import type { AstroComponentFactory } from "astro/runtime/server/index.js";

interface Props {
  id: string;
  title: string;
  Icon: AstroComponentFactory;
}

const { Icon, id, title } = Astro.props;
---

<section id={id}>
  <header class="mb-4 flex items-center gap-2">
    <h3 class="text-2xl font-medium text-[#E8ECD7]">{title}</h3>
    <Icon classes="text-[#E8ECD7] w-6 h-6" />
  </header>
  <slot />
</section>
