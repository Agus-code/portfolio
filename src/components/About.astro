---
import UserIcon from "./icons/UserIcon.astro";
import content from "../content";
import Section from "./Section.astro";

const { about } = content;
---

<Section id="about" Icon={UserIcon} title="Sobre mi">
  <div class="px-2">
    <div class="mb-4">
      <p class="text-sm">{about.text}</p>
    </div>
    <div class="w-full text-right">
      <a
        href={about.cv}
        download=""
        class="border border-zinc-300 text-sm px-2 py-1">Descargar CV</a
      >
    </div>
  </div>
</Section>
