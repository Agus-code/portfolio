---
import WorkIcon from "./icons/WorkIcon.astro";

import content from "../content";
import Section from "./Section.astro";
const { experience } = content;
---

<Section id="experience" title="Experiencia" Icon={WorkIcon}>
  <ol class="mx-5 mt-2 relative">
    <div
      class="hidden sm:block w-0.5 bg-zinc-300 absolute h-full left-1/2 transform -translate-x-1/2"
    >
    </div>
    {
      experience.map((exp, i) => {
        const side = i % 2 === 0; // true = rigth | false = left

        return (
          <li class="mt-6 sm:mt-0 sm:mb-12">
            <div class="flex flex-col sm:flex-row items-start">
              {/* EXP BOX */}
              <div
                class={`flex ${side ? "justify-start" : "justify-end"} w-full mx-auto items-center`}
              >
                <div class={`w-full sm:w-1/2 ${side ? "sm:pr-8" : "sm:pl-8"} `}>
                  <div
                    class={`p-4 flex flex-col ${side ? "items-end" : "items-start"} gap-2`}
                  >
                    <p class="text-sm">{exp.time}</p>
                    <p class="text-xl font-semibold">{exp.name}</p>
                    <p class={`text-xs ${side ? "text-right" : "text-left"}`}>
                      {exp.descriptions}
                    </p>
                  </div>
                </div>
              </div>
            </div>
          </li>
        );
      })
    }
  </ol>
</Section>
